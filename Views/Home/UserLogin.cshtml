@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login</title>
</head>
<body>


    <div class="container"><br/><br /><br/><br /><br /><br /></div>
    <div class="row">
        <div class="col-md-4">
        </div>
    <div class="container col-md-4 center">
        <form class="form-signin" action="ULogin" method="post">
            <h2 class="form-signin-heading">Sign In</h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" class="form-control" style="width:90%" name="email" placeholder="Email address" required="" autofocus="">
           <br/> <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" style="width:90%" name="password" placeholder="Password" required="">
          
            <font size="3">Not Registered Yet? <a href="/Home/SignUp">Sign UP</a> now</font><br/><br/>
            <button class="btn btn-lg btn-primary" type="submit">Sign in</button>

            @if(ViewBag.error!=null)
            {
               <br /><br /><a>&emsp;</a> <p style="color:red"><font size="4">@ViewBag.error</font></p>
            }
</form>
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <br/><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>
