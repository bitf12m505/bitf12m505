<!DOCTYPE html>
@model List<GDSite.Models.DAccount>
@if (Session["admin"] != null)
{
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Admin</title>
    <script src="~/Scripts/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/sb-admin.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Admin/Index">Admin</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Rafia Khalil <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="Logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="/Admin/Main"><i class="fa fa-fw fa-users"></i>View Users</a>
                    </li>
                    <li>
                        <a href="/Admin/Delete"><i class="fa fa-fw fa-cut"></i>Delete Users</a>
                    </li>
                    <li>
                        <a href="/Admin/ViewAll"><i class="fa fa-fw fa-paint-brush"></i>View Designers</a>
                    </li>
                    <li class="active">
                        <a href="/Admin/DeleteDesigner"><i class="fa fa-fw fa-cut"></i>Delete Designers</a>
                    </li>
                    <li >
                        <a href="/Admin/ViewTop"><i class="fa fa-fw fa-bar-chart"></i>View Top Portfolios</a>
                    </li>
                    <li>
                        <a href="/Admin/ViewPortfolio"><i class="fa fa-paint-brush"></i>View Portfolios</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
           @foreach(var d in Model)
            {
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img class="img-circle avatar avatar-original" style="display:block; margin:auto;" src=@d.image height="150" width="150">
                        </div>
                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-12">
                                    <h2 class="only-bottom-margin">@d.name</h2>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <span class="text-muted">Email:</span> @d.name<br>
                                    <span class="text-muted">Phone Number:</span> @d.number<br>
                                    <span class="text-muted">Gender:</span> @d.gender<br>
                                    <span class="text-muted">Address: </span>@d.address<br />
                                    <span class="text-muted">Type: </span>@d.type<br />

                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 text-center" ><font size="5"><a class="btn btn-danger" href="DeleteD?id=@d.Id">Delete</a></font></div>

                        </div>
                    </div>
               
                <br /><br /><br /><hr />
            }
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->

</body>
</html>
}
else
{
<h2>ONLY FOR AUTHORIZED USERS</h2>
}
