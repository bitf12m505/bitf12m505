<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <link href="~/Content/css/modern-business.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <a>&emsp;</a>
            <a>&emsp;</a>
            <a class="logo" href="/Designer/Index">
                <img style="max-width:100px; margin-top: -7px;"
                     src="/Images/logo.jpg">
            </a>
        </div>

        <div class="pull-right">
            <a class="logo" href="#">
                @{ String image = (String)Session["image"];
                         if (image != null)
                         {
                            <img style="max-width:100px; "
                                 width="65" height="65" src=@image class="img-circle">
                         }
                         else
                         {
                            <img style="max-width:100px; "
                                 width="65" height="65" src="/Images/user.jpg" class="img-circle">
                         }
                        }
            </a>
        </div>

        <ul class="nav navbar-nav pull-right">
            <li><a>&emsp;</a></li>
            <li><a>&emsp;</a></li>
            <li><a>&emsp;</a></li>
            <li><a>&emsp;</a></li>
            <li class="bar"><a href="/Designer/About"><font size="3" color="white">About</font></a></li>
            <li><a href="/Designer/Contact"><font size="3" color="white">Contact</font></a></li>
            <li><a href="/Designer/Portfolio"><font size="3" color="white">My Portfolios</font></a></li>
            <li><a href="/Designer/Add"><font size="3" color="white">Add Portfolio</font></a></li>
            <li><a href="/Designer/ViewTop"><font size="3" color="white">View Top Portfolios</font></a></li>
            <li><a href="/Designer/ViewProfile"><font size="3" color="white">Profile</font></a></li>
            <li><a href="/Designer/Logout"><font size="3" color="white">Logout</font></a></li>
        </ul>

    </nav>
    @RenderBody()
    <footer>
        <div class="container_12">
            <div class="grid_12">
                <div class="socials">
                    <a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                </div>
                <div style="text-align:center; font-size: 12px">
                    Journey &copy; 2015 | <a href="#">Privacy Policy</a> | Website designed by <a href="#" rel="nofollow">Rafia Khalil </a>
                </div>
            </div>
            <div class="clear"></div>
        </div>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
